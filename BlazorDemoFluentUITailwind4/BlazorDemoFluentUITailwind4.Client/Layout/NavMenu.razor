@rendermode InteractiveServer

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" CollapsedChildNavigation="true" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavLink Href="theme" Icon="@(new Icons.Regular.Size20.WalkieTalkie())" IconColor="Color.Accent">Theme</FluentNavLink>
            <FluentNavLink Href="counter" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">Counter</FluentNavLink>
            <FluentNavLink Href="weather" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Color.Accent">Weather</FluentNavLink>
            <FluentNavLink Href="ideas" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">Ideas</FluentNavLink>
            <FluentNavLink Href="olympics" Icon="@(new Icons.Regular.Size20.Games())" IconColor="Color.Accent">Olympics</FluentNavLink>
            <FluentNavLink Href="map" Icon="@(new Icons.Regular.Size20.Map())" IconColor="Color.Accent">Leaflet Map</FluentNavLink>
            <FluentNavGroup Title="Tailwind Group" Expanded="true" Icon="@(new Icons.Regular.Size20.SquareDovetailJoint())">
                <FluentNavLink Href="tailwindplay" Icon="@(new Icons.Regular.Size20.PlantCattail())" IconColor="Color.Accent">Tailwind Play</FluentNavLink>
                <FluentNavLink Href="daisyui" Icon="@(new Icons.Regular.Size20.FlowSparkle())" IconColor="Color.Accent">DaisyUI</FluentNavLink>
            </FluentNavGroup>
            <FluentNavGroup Title="Community Group" Icon="@(new Icons.Regular.Size20.SquareDovetailJoint())">
                <FluentNavLink Href="tilegrid" Icon="@(new Icons.Regular.Size20.GridKanban())" IconColor="Color.Accent">Tilegrid</FluentNavLink>
            </FluentNavGroup>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;

}
